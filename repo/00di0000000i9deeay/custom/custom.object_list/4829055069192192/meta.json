          "name": "itemsubtitle",
          "label": "Subtitle field",
          "type": "text"
        },
        {
          "desc": "Specify which fields to show in details",
          "objecttyperef": "object",
          "name": "fields",
          "label": "Fields",
          "type": "objectfields"
        },
        {
          "desc": "Specify a field to bucket upon, empty means no bucketing",
          "name": "bucketField",
          "label": "Bucket field",
          "type": "text"
        },
        {
          "desc": "Enable the tabbed layout",
          "name": "useTabs",
          "label": "Tabbed layout",
          "type": "boolean"
        },
        {
          "desc": "Hide the details tab",
          "name": "hideDetails",
          "label": "Hide details",
          "type": "boolean"
        },
        {
