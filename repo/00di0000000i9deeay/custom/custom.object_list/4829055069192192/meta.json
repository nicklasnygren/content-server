    },
    {
      "controls": [
        {
          "desc": "Show next activity",
          "name": "showNextActivity",
          "label": "Show next uncompleted activity",
          "type": "boolean"
        },
        {
          "desc": "Show last activity",
          "name": "showLastActivity",
          "label": "Show last completed activity",
          "type": "boolean"
        },
        {
          "values": [
            {
              "id": "no",
              "label": "No activity filtering"
            },
            {
              "id": "without",
              "label": "Show only items without next activity"
            },
            {
              "id": "with",
              "label": "Show only items with next activity"
            }
          ],
          "desc": "How do you wanna filter on activity",
          "name": "activityFilterType",
          "label": "Filter the items shown based on activity",
          "type": "select"
        },
        {
          "desc": "Filter Tasks to include (will affect both the activity filter and the next activity)",
          "objecttype": "Task",
          "name": "taskFilter",
          "label": "Task filter",
          "type": "objectfilter"
        },
        {
          "desc": "Filter Events to include (will affect both the activity filter and the next activity)",
          "objecttype": "Event",
          "name": "eventFilter",
          "label": "Event filter",
          "type": "objectfilter"
        },
        {
          "desc": "Show the Add Task, Log call and Book Meeting buttons",
          "name": "showActionButtons",
          "label": "Show Action Buttons",
          "type": "boolean"
        }
      ],
      "label": "Activities"
    },
    {
      "controls": [
        {
          "desc": "Should this card trigger notifications",
          "name": "notify",
          "label": "Show notifications",
          "type": "boolean"
        }
      ],
      "label": "Notifications"
    }
